<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwindowbackground"
    tools:context="com.murali.hariprahlad.bhagavathgita.activitys.RegisterActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/fixedfooter">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="40dp"
        android:baselineAligned="false">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Enter User Name"
            android:ems="10"
            android:textColor="@color/textColor"
            android:background="@drawable/edittextstyle"
            android:id="@+id/regusername" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:hint="Enter Mobile Number"
            android:ems="10"
            android:textColor="@color/textColor"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextstyle"
            android:id="@+id/regmobile" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="Enter Email"
            android:ems="10"
            android:textColor="@color/textColor"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextstyle"
            android:id="@+id/regemail" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:hint="Enter Pin Number"
            android:ems="10"
            android:textColor="@color/textColor"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextstyle"
            android:id="@+id/regpin" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberPassword"
            android:hint="Enter Confirm Pin"
            android:ems="10"
            android:textColor="@color/textColor"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextstyle"
            android:id="@+id/regconpin" />
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Choose Country"
            android:textColor="@color/textColor"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_bg"
            android:id="@+id/regcountry" />
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Choose State"
            android:textColor="@color/textColor"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_bg"
            android:id="@+id/regstate" />
        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Choose City"
            android:textColor="@color/textColor"
            android:layout_marginTop="5dp"
            android:background="@drawable/spinner_bg"
            android:id="@+id/regcity" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint=" Enter PinCode"
            android:ems="10"
            android:textColor="@color/textColor"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextstyle"
            android:id="@+id/regpincode" />

        <Button
            android:text="SignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/regsignUp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:background="@drawable/button_bg"/>

        <TextView
            android:text="Already SignUp CliCk On Me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/alertTextcolor"
            android:id="@+id/reglogin"
            android:textSize="15dp"
            android:layout_marginTop="10dp" />
    </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/fixedfooter"
        android:background="@drawable/footer"
        android:layout_alignParentBottom="true">
    </RelativeLayout>

</RelativeLayout>
